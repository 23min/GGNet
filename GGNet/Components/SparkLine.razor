@typeparam T
@typeparam TX
@typeparam TY

<svg id=@Id xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" viewBox="0 0 @Width @Height">
    <defs>
        <style type="text/css">
            line, polyline, polygon, path, rect, circle {
                fill: none;
                stroke-linecap: butt;
                stroke-linejoin: round;
                stroke-miterlimit: 10.00;
            }

            #@(Id) .panel {
                fill: @(Theme.Panel.Background.Fill);
            }

        </style>

        <clipPath id=@(Id + "-" + Panel.Id + "-area")>
            <rect x=@Area.X y=@Area.Y width=@Area.Width height=@Area.Height />
        </clipPath>
    </defs>

    <GGNet.Components.Defs.Animation Id=@Id Theme=@Theme />

    <rect x=@Area.X y=@Area.Y width=@Area.Width height=@Area.Height class="panel" />

    <Area T=T TX=TX TY=TY Data=@Panel Coord=@this Zone=@Area Clip=@(Id + "-" + Panel.Id + "-area") />

    <GGNet.Components.Tooltips.SparkLine Coord=@this Area=@Area Theme=@Theme @ref=@tooltip />
</svg>
