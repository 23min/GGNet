<defs>
    <style type="text/css">
        #@(Id) circle.animate {
                transition: transform @(Theme.Animation.Point.Transition)s ease-in-out;
            }

            #@(Id) circle.animate:hover {
                transform: scale(@(Theme.Animation.Point.Scale));
            }

        #@(Id) rect.animate {
            transition: transform @(Theme.Animation.Bar.Transition)s ease-in-out;
            fill-opacity: 0.6 !important;
        }
            #@(Id) rect.animate:hover {
                fill-opacity: 1 !important;
            }
    </style>
</defs>

@code {

    [Parameter]
    public string Id { get; set; }

    [Parameter]
    public Theme Theme { get; set; }

}
