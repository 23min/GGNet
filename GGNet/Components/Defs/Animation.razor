<defs>
    <filter id="@(Id)-shadow">
        <feFlood in="SourceGraphic" flood-color=@Theme.Animation.Bar.Flood result="COLOR"/>
        <feGaussianBlur in="COLOR" stdDeviation="3" result="BLUR" />
        <feMerge>
            <feMergeNode in="BLUR" />
            <feMergeNode in="SourceGraphic" />
        </feMerge>
    </filter>

    <style type="text/css">
        #@(Id) circle.animate {
                transition: transform @(Theme.Animation.Point.Transition)s ease-in-out;
            }

            #@(Id) circle.animate:hover {
                transform: scale(@(Theme.Animation.Point.Scale));
            }

        #@(Id) rect.animate {
            transition: filter @(Theme.Animation.Bar.Transition)s ease-in-out;
        }
            #@(Id) rect.animate:hover {
                filter: url(#@(Id)-shadow);
            }
    </style>
</defs>

@code {

    [Parameter]
    public string Id { get; set; }

    [Parameter]
    public Theme Theme { get; set; }

}
